<header>
  <%= render "shared/header" %>
</header>

<main>
  <div class="main-wrapper">
    <div class="main-top">
      <h3>自分の体重を入力して、記録に残そう！<h3>
    </div>
    <div class="weight-wrap">
      <p>体重を入力する</p>
      <%= form_with model: @weight, url:weights_path , class: 'weight-new-main', local: true do |f| %>
      <div class="new-weight-wrap">
        <div class="weight-text">体重入力</div>
        <%= f.text_field :weight, class:"new-field", id:"new-name",  placeholder:"体重を入力してください" %>
      </div>
      <% end %>
    </div>
  </div>
</main>

<footer>
  <%= render "shared/footer" %>
</footer>